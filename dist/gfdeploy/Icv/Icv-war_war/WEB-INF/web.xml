<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    
    <jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
    </jsp-config>
   
    
    <servlet>
        <servlet-name>getComment</servlet-name>
        <servlet-class>com.icv.ServletHome.getComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountControl</servlet-name>
        <servlet-class>com.icv.ServletControl.AccountControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewServlet</servlet-name>
        <servlet-class>com.icv.ServletHome.ViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileControl</servlet-name>
        <servlet-class>com.icv.ServletControl.ProfileControl</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>PublicControl</servlet-name>
        <servlet-class>com.icv.ServletControl.PublicControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EducationControl</servlet-name>
        <servlet-class>com.icv.ServletControl.EducationControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SkillControl</servlet-name>
        <servlet-class>com.icv.ServletControl.SkillControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExperiencesControl</servlet-name>
        <servlet-class>com.icv.ServletControl.ExperiencesControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityControl</servlet-name>
        <servlet-class>com.icv.ServletControl.ActivityControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cvtoPdf</servlet-name>
        <servlet-class>com.icv.ServletControl.cvtoPdf</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoriesControl</servlet-name>
        <servlet-class>com.icv.ServletControl.StoriesControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getComment</servlet-name>
        <url-pattern>/getComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountControl</servlet-name>
        <url-pattern>/AccountControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewServlet</servlet-name>
        <url-pattern>/ViewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileControl</servlet-name>
        <url-pattern>/ProfileControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicControl</servlet-name>
        <url-pattern>/PublicControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EducationControl</servlet-name>
        <url-pattern>/EducationControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SkillControl</servlet-name>
        <url-pattern>/SkillControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExperiencesControl</servlet-name>
        <url-pattern>/ExperiencesControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityControl</servlet-name>
        <url-pattern>/ActivityControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cvtoPdf</servlet-name>
        <url-pattern>/cvtoPdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoriesControl</servlet-name>
        <url-pattern>/StoriesControl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>NewFilter</filter-name>
        <filter-class>Filter.NewFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>NewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>
            com.icv.ServletControl.SessionCounter
        </listener-class>
    </listener>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
</web-app>
